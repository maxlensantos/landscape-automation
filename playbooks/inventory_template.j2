[ha_nodes]
{% for line in containers_list %}
{% set parts = line.split() %}
{% if parts|length >= 2 %}
{{ parts[0] }} ansible_host={{ parts[1] }} ansible_user=ansible_user
{% endif %}
{% endfor %}

[all:vars]
ansible_connection=ssh
ansible_python_interpreter=/usr/bin/python3
ansible_become=yes
ansible_become_method=sudo
ansible_become_user=root